        /* Loading Animation */
        .loading {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: var(--gradient-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            transition: opacity 0.5s ease;
        }

        .loading.hidden {
            opacity: 0;
            pointer-events: none;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top: 3px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Cover Page Styles */
        .cover-page {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: linear-gradient(135deg, var(--primary-color) 0%, #9d9680 50%, var(--primary-color) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .cover-page.hidden {
            transform: translateY(-100%);
            pointer-events: none;
        }

        .cover-content {
            text-align: center;
            color: var(--text-light);
            position: relative;
            animation: fadeInUp 1s ease-out;
            max-width: 90%;
            padding: 2rem;
        }

        /* Islamic Border Pattern */
        .islamic-border {
            position: relative;
            padding: 2rem;
        }

        .islamic-border::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(circle at 20% 20%, rgba(245, 243, 231, 0.1) 2px, transparent 2px),
                radial-gradient(circle at 80% 80%, rgba(245, 243, 231, 0.1) 2px, transparent 2px);
            background-size: 40px 40px;
            border: 2px solid rgba(245, 243, 231, 0.3);
            border-radius: 15px;
            pointer-events: none;
        }

        .main-content {
            opacity: 0;
            transition: opacity 0.8s ease-in-out 0.5s;
        }

        .main-content.visible {
            opacity: 1;
        }

        /* Basic responsive grid */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
            position: relative;
        }

        /* Hide sections initially for animation */
        section {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        section.animate-in {
            opacity: 1;
            transform: translateY(0);
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
